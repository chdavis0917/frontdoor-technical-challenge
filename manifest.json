{
  "manifest_version": 3,
  "name": "Frontdoor",
  "version": "1.0.0",
  "description": "Chrome Extension for Frontdoor",
  "permissions": ["storage"],
  "background": {
    "service_worker": "./frontend/public/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "css": ["./frontend/public/index.css"],
      "js": ["./build/index.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "./build/index.html"
  }
}
